<html>
@model IEnumerable<Bank.Models.Transaction>

@{
    ViewBag.Title = "Check";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<head>
    <link href="~/Content/StyleCheck.css" rel="stylesheet" />
    <meta http-equiv="Content-Type" content="text/html; charset=windows-1251" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>
    <script type="text/javascript" src="~/Content/ForPrint.js"></script>
</head>
<body Language="JavaScript">

    <h2> </h2>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>
    <script>
        $(function () {
            $("#CardNumber").mask("9999 9999 9999 9999");
        });
    </script>
    <script type="text/javascript">
        doOnLoad(function windowPrint() {
            window.print();
        });
    </script>

    <style>

        .title {
            font-weight: bold;
            text-align: center;
        }

        .checkSize {
            width: 60mm;
            font-family: Arial;
            font-size: 8px;
            word-wrap: break-word;
            text-transform: uppercase;
        }

        .mainDiv {
            word-wrap: break-all;
            border-width: 1px;
            border-style: solid;
            border-color: black;
            width: 60mm;
            margin: 5mm;
            padding: 0mm 3mm 0mm 3mm;
        }
        .mainDiv2 {
            word-wrap: break-all;
            border-width: 4px;
            border-style: solid;
            border-color: #5d417b;
            width: 55mm;
            margin: 0mm;
            padding: 0mm 1mm 0mm 1mm;
        }

