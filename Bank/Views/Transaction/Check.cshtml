    <p>
    </p>
    <div id="checkId" class="mainDiv">
        <h4>Квитанция операции</h4>
        <table class="table table-condensed">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TransactionType)
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransactionType)
                    </td>
                </tr>
            }
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CardNumber)
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CardNumber)
                    </td>
                </tr>
            }
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                </tr>
            }
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Summ)
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Summ)
                    </td>
                </tr>
            }
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Currency)
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Currency)
                    </td>
                </tr>
            }
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TransactionID)
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransactionID)
                    </td>
                </tr>
            }
        </table>
        <div id="checkId" class="mainDiv2" style="color:#5d417b;font:bold Arial;font-size:10;white-space: nowrap;">
            <div class="stamp " style="position:relative;">
                <div class="forBankStamp forBankStampforInternalPayment






                        ">

                    <span class="stampTitle" style="color:#5d417b;font:bold Arial;font-size:10;white-space: nowrap;">Головное отделение №1337</span><br>
                    <span class="stampText" style="color:#5d417b;font:bold Arial;font-size:10;white-space: nowrap;">БИК:1234567</span><br>
                    <span class="stampText" style="color:#5d417b;font:bold Arial;font-size:10;white-space: nowrap;">Корр.Счет: 10987654321321</span><br>




                    <div class="" style="text-align:center;">




                        <img src="@string.Join("-", "/Content/Images/stampExecuted_noBorder.gif")" width="137px" height="18px" />





                    </div>
                    <span style="color:#5d417b;font:bold Arial;font-size:10;white-space: nowrap;">
                        @foreach (var item in Model)
                        {

                            @Html.DisplayFor(modelItem => item.Date)
                        }
                    </span>





                </div>
            </div>

        </div>
            <br /><div id="standartInfo" class="checkSize">
                по претензиям, связанным со списанием средств со счета, вы можете
